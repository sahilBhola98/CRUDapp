<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".database.StudentForm">

    <Button
        android:id="@+id/buttonCreateStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="110dp"
        android:onClick="clickListener"
        android:text="Create Student"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewRecordCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="261dp"
        android:layout_marginRight="261dp"
        android:text="0 Records Found"
        app:layout_constraintEnd_toStartOf="@+id/dblist"
        app:layout_constraintStart_toEndOf="@+id/textViewDb"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/dblist"
        android:layout_width="0dp"
        android:layout_height="822dp"

        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewRecordCount"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewRecordCount"
        app:layout_constraintEnd_toStartOf="@+id/textViewRecordCount"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>